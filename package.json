    "babel-loader": "^8.2.2",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "lerna": "^3.22.1",
    "plop": "^2.7.4",
    "rollup": "^2.39.0",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.32.3",
